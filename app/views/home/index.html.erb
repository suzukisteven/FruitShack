<h1 class="mt-3 mb-3">Welcome to ShopiBuy</h1>

  <div class="container d-flex">
    <% @products.each do |product| %>
    <div class="card text-center mr-3" style="width: 18rem;">
      <img class="card-img-top" src="http://placehold.it/300x300" alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title"><%= product.name %></h5>
        <p class="card-text"><%= product.description %></p>
        <p class="card-text"><%= product.price %></p>
        <%= link_to "See More", product_path(product.id), class:"btn btn-primary" %>
      </div>
    </div>
    <% end %>
  </div>

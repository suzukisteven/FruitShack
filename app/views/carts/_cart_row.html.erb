<div class="container border border-muted mt-3">

  <div class="row">

    <div class="col-4">
      <h4 class="mt-4"><%= product.name %></h4>
      <h6><span style="color: coral"><%= number_to_currency order_item.unit_price %></span></h6>
    </div>

    <div class="col-2">
      <img src="<%= product.image.url(:thumb) %>">
    </div>

    <div class="col-6">
      <%= form_for order_item, remote: true do |f| %>

          <div class="col-xs-4 mt-3">
            <%= f.number_field :quantity, value: order_item.quantity.to_i, class: "form-control", min: 1 %>
            <%= f.hidden_field :product_id, value: product.id %>
          </div>

          <div class="col-xs-8">
            <div class="btn-group">
              <%= f.submit "Change Quantity", class: "btn btn-primary btn-sm mr-1 mt-3" %>
              <%= link_to "Remove", order_item, { data: { confirm: "Are you sure you want to remove the product '#{order_item.product.name}' from cart?" }, method: :delete, remote: true, class: "btn btn-outline-danger btn-sm mt-3" } %>
            </div>
            <h6 class="mt-3 text-right">Total Price: <span style="color: green"><%= number_to_currency order_item.total_price %></span></h6>

          </div>

      <% end %>
    </div>

  </div>

</div>

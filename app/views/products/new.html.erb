<h1 class="mt-3 mb-3">Create a Product</h1>

<%= form_with scope: :product, url: products_path, local: true do |f|%>
  <div class="text-field">
    <%= f.label :name %>
    <%= f.text_field :name, class:"form-control mb-3" %>
    <%= f.label :description %>
    <%= f.text_area :description, rows: "8", class:"form-control mb-3" %>
    <%= f.label :price %>
    <%= f.text_field :price, class:"form-control" %>
    <%= f.submit "Submit", class:"btn btn-primary mt-3" %>
  </div>
  <% end %>

<h1 class="mt-3 mb-3">Product Show Page</h1>

<div class="container mb-5">
  <div class="row">
    <div class="col-8 p-0">
      <img class="border border-muted m-0 p-0" src="<%= @product.image_url %>" alt="" width="650px" height="650px">
    </div>

    <div class="col-4 p-3">
      <h3 class="mb-4"><strong><%= @product.name %></strong></h3>
      <h5 class="mb-4"><%= @product.description %></h5>

      <div class="row">
        <div class="col-xs-4">

          <%= form_for @order_item, remote: true do |f| %>

          <div class="input-group">
            <%= f.label :quantity, "Quantity", class:"mr-3 mt-2"%>
            <%= f.number_field :quantity, value: 1, class: "form-control", min: 1 %>
            <div class="input-group-btn mr-3">
              <%= f.hidden_field :product_id, value: @product.id %>
              <%= f.submit "Add to Cart", class: "btn btn-primary add-to-cart-btn" %>
            </div>
          </div>
          <h5 class="mt-3 text-right mr-3">Price: <span style="color: green"><%= number_to_currency @product.price %></span></h5>

          <% end %>
        </div>
    </div>

  </div>

</div>
